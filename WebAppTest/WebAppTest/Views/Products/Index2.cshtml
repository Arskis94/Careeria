@model IEnumerable<WebAppTest.Models.Products>
@{
    ViewBag.Title = "Index2";
}
@section scripts {
    <script type="text/javascript">
        $(function () {
            $(".showProductId").click(function () {
                let productId = $(this).data("productid");
                alert(productId);
            });
        });
        $(function () {
            $(".deleteProduct").click(function () {
                let productId = $(this).data("productid");
                alert(productId);
            });
        });
        $(function () {
            $(".showProductID").click(function () {
                let productId = $(this).data("productid");
                alert(productId);
            });
        });
    </script>
}
<div class="container-fluid">
    <h2>Index</h2>
    <h4>Products @Model.Count()</h4>

    <div class="row">
        @foreach (WebAppTest.Models.Products Prod in Model)
        {
        <div class="col-lg-3">
            <div class="card mb-3">
                <h3 class="card-header">@Prod.ProductName</h3>
                <div class="card-body">
                    <h5 class="card-title">Quantity per unit: @Prod.QuantityPerUnit</h5>
                    <h6 class="card-subtitle text-muted">In stock: @Prod.UnitsInStock</h6>
                </div>
                <img style="height: 200px; width: 100%; display: block;" src="@Prod.ImageLink" alt="@Prod.ImageLink">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Price: @Prod.UnitPrice</li>
                    <li class="list-group-item">Units in order: @Prod.UnitsOnOrder</li>
                    <li class="list-group-item">Reorder level: @Prod.ReorderLevel</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>

<script>
    function showSelectedProduct(productID) {
        alert(productID);
    }
</script>





