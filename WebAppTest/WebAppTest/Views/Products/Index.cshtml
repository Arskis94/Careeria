@model IEnumerable<WebAppTest.Models.Products>
@{
    ViewBag.Title = "Index";
}
@section scripts {
    <script type="text/javascript">
        $(function () {
            $(".showProductId").click(function () {
                let productId = $(this).data("productid");
                alert(productId);
            });
        });
        $(function () {
            $(".deleteProduct").click(function () {
                let productId = $(this).data("productid");
                alert(productId);
            });
        });
        $(function () {
            $(".showProductID").click(function () {
                let productId = $(this).data("productid");
                alert(productId);
            });
        });
    </script>
}

<h4>Products @Model.Count()</h4>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Units in order</th>
            <th>Image link</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WebAppTest.Models.Products Prod in Model)
        {
        <tr>
            <td class="showProductID" data-productID="@Prod.ProductID">@Prod.ProductID</td>
            <td>@Prod.ProductName</td>
            <td>@Prod.UnitPrice</td>
            <td>@Prod.UnitsInStock</td>
            <td>@Prod.UnitsOnOrder</td>
            <td>@Prod.ImageLink</td>
            <td><button class="btn btn-success" onclick='showSelectedProduct("@Prod.ProductName")'>Edit</button></td>
            <td><button class="btn btn-primary showProductId" data-productID="@Prod.ProductID">Edit</button></td>
            <td><button class="btn btn-danger deleteProduct" data-productID="@Prod.ProductID">Delete</button></td>
        </tr>

        }
    </tbody>
</table>

<script>
    function showSelectedProduct(productID) {
        alert(productID);
    }
</script>
<script>
    const getCellValue = (tr, idx) => tr.children[idx].innerText || tr.children[idx].textContent;

    const comparer = (idx, asc) => (a, b) => ((v1, v2) => v1 !== "" && v2 !== !isNaN(v1) && !isNaN(v2) ? v1 - v2 : v1.toString().localeCompare(v2))
        (getCellValue(asc ? a : b, idx), getCellValue(asc ? b : a, idx));
    document.querySelectorAll("th").forEach(th => th.addEventListener("click", (() => {
        const table = th.closest("table");
        const tbody = table.querySelector("tbody");
        Array.from(tbody.querySelectorAll("tr"))
            .sort(comparer(Array.from(th.parentNode.children).indexOf(th), this.asc = !this.asc))
            .forEach(tr => tbody.appendChild(tr));
    })))
</script>





